\newcommand{\ccHOne}[1]{%
    \unless\ifdefined\HCode%
        {\huge #1}
    \else
        #1
    \fi
}
\newcommand{\ccHTwo}[1]{%
    \unless\ifdefined\HCode%
        {\LARGE #1}
    \else
        #1
    \fi
}
\newcommand{\ccHThree}[1]{%
    \unless\ifdefined\HCode%
        {\Large #1}
    \else
        #1
    \fi
}
\newcommand{\ccHFour}[1]{%
    \unless\ifdefined\HCode%
        {\large #1}
    \else
        #1
    \fi
}

\newcommand{\ccName}[1]{%
    \makebox[1.15\width]{\textbf{#1}}
}
\newcommand{\ccAffiliation}[1]{%
    \makebox[1.15\width]{\small{#1}}
}
\newcommand{\ccAttribution}[1]{%
    \StrCut{#1}{/}\name\affiliation
     \Longstack[c]{%
        \ccName{\name}
        \ccAffiliation{\affiliation}
    }
}
\newcommand{\ccAttributionList}[1]{%
    \foreach \attribution in #1{%
        \ccAttribution{\attribution}
    }
}

