% Listings code formatting.
\definecolor{cclstcodebackground}{rgb}{0.95, 0.95, 0.95}
\definecolor{cclstcodecomment}{rgb}{0.5, 0.5, 0.5}
\definecolor{cclstcodekeyword}{rgb}{0.60, 0.15, 0.70}
\definecolor{cclstcodestring}{rgb}{0.55 ,0.75, 0.30}
\definecolor{cclstcodenumber}{rgb}{0.0, 0.65, 0.95}
\definecolor{cclstcodelinenumber}{rgb}{0.5, 0.5, 0.5}

\lstdefinestyle{cinematiccolor}{
    backgroundcolor=\color{cclstcodebackground},
    commentstyle=\color{cclstcodecomment},
    keywordstyle=\textbf\color{cclstcodekeyword},
    numberstyle=\color{cclstcodelinenumber},
    stringstyle=\color{cclstcodestring},
    basicstyle=\footnotesize,
    breakatwhitespace=false,
    breaklines=true,
    captionpos=b,
    keepspaces=true,
    % numbers=left,
    % numbersep=5pt,
    showspaces=false,
    showstringspaces=false,
    showtabs=false,
    tabsize=4
}

\lstset{style=cinematiccolor}

